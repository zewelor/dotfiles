#!/bin/bash

# RC files
cd $(dirname $BASH_SOURCE)
BASE=$(pwd)

for rc in *rc *config gitignore_global; do
  ln -sfv $BASE/$rc ~/.$rc
done

for rc in tmuxinator; do
  ln -sfnvi $BASE/prv/$rc ~/.$rc/
done

mkdir -p ~/.mc/
curl -L https://raw.githubusercontent.com/peel/mc/master/solarized.ini > ~/.mc/solarized.ini
