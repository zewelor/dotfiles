{
  "env": {
    "SHELL": "/bin/bash"
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/status-line.sh"
  },
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": false,
    "frontend-design@claude-plugins-official": false,
    "context7@claude-plugins-official": false,
    "pyright-lsp@claude-plugins-official": false,
    "code-review@claude-plugins-official": false,
    "commit-commands@claude-plugins-official": false,
    "security-guidance@claude-plugins-official": false,
    "github@claude-plugins-official": false
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "Notification": [
      {
        "matcher": "(permission|idle)_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/claude-code-notifier.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/claude-code-notifier.sh"
          }
        ]
      }
    ]
  }
}
