{
	"servers": {
		"brave": {
			"command": "docker",
			"args": [
				"run",
				"-i",
				"--rm",
				"-e",
				"BRAVE_API_KEY",
				"-e",
				"BRAVE_MCP_TRANSPORT=stdio",
				"mcp/brave-search"
			],
			"type": "stdio"
		},
		"perplexity-ask": {
			"command": "docker",
			"args": [
				"run",
				"-i",
				"--rm",
				"-e",
				"PERPLEXITY_API_KEY",
				"mcp/perplexity-ask"
			],
			"type": "stdio"
		}
	},
	"inputs": [
		{
			"id": "github_token",
			"type": "promptString",
			"description": "GitHub Personal Access Token",
			"password": true
		}
	]
}
