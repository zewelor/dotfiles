{
	"servers": {
		"brave": {
			"command": "docker",
			"args": [
				"run",
				"-i",
				"--rm",
				"-e",
				"BRAVE_API_KEY",
				"-e",
				"BRAVE_MCP_TRANSPORT=stdio",
				"mcp/brave-search"
			],
			"type": "stdio"
		},
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${input:context7-key}"
      }
    }
	},
	"inputs": [
		{
			"id": "github_token",
			"type": "promptString",
			"description": "GitHub Personal Access Token",
			"password": true
		},
    {
      "id": "context7-key",
      "type": "promptString",
	  "description": "Context7 API Key",
      "password": true
    }
	]
}
