{
    "editor.accessibilitySupport": "off",
    "editor.minimap.enabled": false,
    "vs-kubernetes": {
        "vs-kubernetes.knownKubeconfigs": [
            "/home/omen/.kube/config"
        ],
        "vs-kubernetes.kubeconfig": "/home/omen/.kube/config",
        "vscode-kubernetes.minikube-path.linux": "/home/omen/.vs-kubernetes/tools/minikube/linux-amd64/minikube"
    },
    "explorer.confirmDelete": false,
    "editor.tabSize": 2,
    "window.zoomLevel": 2,
    "vim.neovimPath": "/usr/bin/nvim",
    "workbench.colorTheme": "Solarized Light",
    "terminal.integrated.fontFamily": "'MesloLGS NF'",
    "vim.normalModeKeyBindingsNonRecursive": [
    {
        "before": ["u"],
        "after": [],
        "commands": [
            {
                "command": "undo",
                "args": []
            }
        ]
    },
    {
        "before": ["<C-r>"],
        "after": [],
        "commands": [
            {
                "command": "redo",
                "args": []
            }
        ]
    }
],
"ansible.validation": false,
"editor.renderControlCharacters": false,
"workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
},
"vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
"explorer.confirmDragAndDrop": false,
"vscode-kubernetes.helm-path": "/snap/bin/helm",
"vscode-kubernetes.kubectl-path": "/snap/bin/kubectl",
"redhat.telemetry.enabled": false,
"http.proxySupport": "off",
"yaml.schemas":{
    "kubernetes" : "*.yaml",
},
"editor.fontSize": 15,
"editor.fontFamily": "\"MesloLGS NF\"",
"ruby.codeCompletion": "rcodetools",
"ruby.useBundler": true, //run non-lint commands with bundle exec
"ruby.useLanguageServer": true,
"workbench.startupEditor": "none", // use the internal language server (see below)
}
